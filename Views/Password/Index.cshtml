@model StudentAttendanceManagementSystem.Models.Authentication.PasswordForm

@{
    ViewData["Title"] = "Home Page";
}


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentAttendanceManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
    <header class="container-fluid sticky-top px-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SAMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                     
                      
                       
                    </ul>
                     <partial name="_LoginPartial" />
                    
                    
                </div>
            </div>
        </nav>
    </header>

    <hr>

    <div class="w-50" style="padding-left: 20%">
        <p style="color: rgb(239, 8, 8); font-size: xx-large;">Reset Password</p>

        <form asp-action="Update" asp-controller="Password" style="align-content: center;" method="post">
         
            <div class="form-group">
                <input asp-for="CurrentPassword" type="password" class="form-control item" id="companyName" placeholder="Current Password">
            </div>
             <span asp-validation-for="CurrentPassword" class="text-danger"></span>

            <div class="form-group">
                <input asp-for="NewPassword" type="password" class="form-control item" id="companyName" placeholder="New Password">
            </div>
             <span asp-validation-for="NewPassword" class="text-danger"></span>

            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control item" id="companyName" placeholder="Confirm Password">
            </div>
             <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

             <input asp-for="SupervisorId" type="text" class="form-control d-none item" value=@ViewBag.id id="companyName" placeholder="New Password">

             <div class="form-group">
                <button  type="submit" class="btn btn-success mt-3" type="button">Create </button>
            </div>
    </form>
    

    </div>

 
</body>
</html>