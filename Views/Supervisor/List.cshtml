
@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.0/css/boxicons.min.css" integrity="sha512-pVCM5+SN2+qwj36KonHToF2p1oIvoU3bsqxphdOIWMYmgr4ZqD3t5DjKvvetKhXGc/ZG5REYTT6ltKfExEei/Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="mb-3">
                <h5 class="card-title" style="color: rgb(239, 8, 8); font-size: xx-large;">Supervisor List <span class="text-muted fw-normal ms-2"></span></h5>
            </div>
        </div>
        <div class="col-md-6">
           
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="table-responsive">
                    <table class="table project-list-table table-nowrap align-middle table-borderless">
                        <thead>
                            <tr>
                                 <th scope="col">Id</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Delete</th>

    
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var user in @ViewBag.users){
                            <tr>
                               
                               
                                <td><a asp-controller="Student" asp-action="List"  asp-route-id="@user.UserName"><span  asp-route-id="@user.UserName" class=" badge-soft-info mb-0">@user.Id</span></a></td>
                                 <td><span class=" badge-soft-success mb-0">@user.FirstName</span></td>
                                 <td><span class=" badge-soft-success mb-0">@user.LastName</span></td>
                                 <td><span class=" badge-soft-success mb-0">@user.PhoneNumber</span></td>
                                 <td><span class=" badge-soft-success mb-0">@user.Email</span></td>
                              
                                <td><a asp-area="" asp-controller="Supervisor" asp-action="Delete" asp-route-id="@user.UserName"><span  class=" badge-soft-danger mb-0">Delete</span></a></td>

                                
                               
                               
                            </tr>
                           
                           
                        }</tbody>
                    </table>
                    <div class="flex">
                        <a class="btn mt-5 btn-info" asp-area="" asp-controller="Admin" asp-route-id="@ViewBag.id" asp-action="Index">Go back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>